# Backend environment variables for Inventarium
# Copy this file to .env and fill in the values for your environment

# PostgreSQL database (used when NODE_ENV is not 'test')
DB_NAME=inventarium
DB_USER=postgres
DB_PASSWORD=postgres
DB_HOST=localhost
DB_PORT=5432

# Security
# Change this to a strong, random string in production
JWT_SECRET=change_me_to_a_strong_secret

# App environment
# development | production | test
NODE_ENV=development

# CORS whitelist (comma-separated). In production, set your frontend URLs here.
# Example for local React dev server:
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
